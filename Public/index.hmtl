            if (isAuthReady) { // Garante que só roda se auth estiver ok
                renderMenu();
                contentArea.innerHTML = `<p class="text-center text-gray-500">Bem-vinda à Precyz! Selecione uma opção do menu para começar.</p>`;
            }
        }
        
        // Chama init quando o DOM estiver pronto, mas a autenticação pode demorar mais.
        // A lógica de onAuthStateChanged já lida com o fluxo pós-autenticação.
        document.addEventListener('DOMContentLoaded', () => {
             // A autenticação é assíncrona, então renderMenu() e loadInitialData() são chamados dentro de onAuthStateChanged.
             // Apenas uma mensagem inicial pode ser colocada aqui, se necessário.
             console.log("DOM carregado. Aguardando Firebase Auth...");
        });

    </script>
